{
  "name": "truevoteapp",
  "description": "TrueVote App",
  "author": "TrueVote, Inc.",
  "version": "1.0.0",
  "private": true,
  "homepage": "http://truevote.org/",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TrueVote/TrueVote.App"
  },
  "scripts": {
    "dev": "vite --host --port 5173",
    "build": "yarn build-version && tsc && vite build",
    "serve": "http-server dist",
    "preview": "vite preview",
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix \"**/*.{ts,tsx}\"",
    "format": "prettier --write \"**/*.{ts,tsx}\" --config ./.prettierrc",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build-api:local": "curl --insecure --output TrueVote.Api.swagger.json https://localhost:7253/swagger/v1/swagger.json && npx swagger-typescript-api --no-client --path ./TrueVote.Api.swagger.json --output ./src --name TrueVote.Api.ts",
    "build-api:prod": "npx swagger-typescript-api --no-client --path https://api.truevote.org/api/swagger.json --output ./src --name TrueVote.Api.ts",
    "refresh-api:local": "yarn build-api:local && yarn fix-api",
    "refresh-api:prod": "yarn build-api:local && yarn fix-api",
    "fix-api": "ts-node -P tsconfig.commonjs.json ./fixApi.ts",
    "build-version": "bash ./scripts/build-version.sh",
    "update-packages": "ncu -u"
  },
  "dependencies": {
    "@apollo/client": "^3.10.4",
    "@emotion/react": "^11.11.4",
    "@hello-pangea/dnd": "^16.6.0",
    "@mantine/core": "^7.9.1",
    "@mantine/hooks": "^7.9.1",
    "@mantine/notifications": "^7.9.1",
    "graphql": "^16.8.1",
    "lodash": "^4.17.21",
    "nostr-tools": "^2.5.2",
    "moment": "^2.30.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-json-view": "^1.21.3",
    "react-router-dom": "^6.23.1",
    "react-sortable-hoc": "^2.0.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.1.1",
    "@storybook/addon-interactions": "^8.1.1",
    "@storybook/addon-links": "^8.1.1",
    "@storybook/react": "^8.1.1",
    "@storybook/react-vite": "^8.1.1",
    "@storybook/testing-library": "^0.2.2",
    "@tabler/icons-react": "^3.4.0",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@types/react-helmet": "^6.1.11",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "@vitejs/plugin-basic-ssl": "^1.1.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-storybook": "^0.8.0",
    "http-server": "^14.1.1",
    "npm-check-updates": "^16.14.20",
    "postcss": "^8.4.38",
    "postcss-preset-mantine": "^1.15.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "storybook": "^8.1.1",
    "swagger-typescript-api": "^13.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vite-plugin-environment": "^1.1.3"
  },
  "packageManager": "yarn@1.22.19+sha1.4ba7fc5c6e704fce2066ecbfb0b0d8976fe62447"
}
