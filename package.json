{
  "name": "truevoteapp",
  "description": "TrueVote App",
  "author": "TrueVote, Inc.",
  "version": "1.0.0",
  "private": true,
  "homepage": "http://truevote.org/",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TrueVote/TrueVote.App"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix \"**/*.{ts,tsx}\"",
    "format": "prettier --write \"**/*.{ts,tsx}\" --config ./.prettierrc",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "refresh-api:prod": "npx swagger-typescript-api --no-client --path https://truevote-api.azurewebsites.net/api/swagger.json --output ./src --name TrueVote.Api.ts",
    "refresh-api:local": "curl --insecure --output TrueVote.Api.swagger.json https://localhost:7071/api/swagger.json && npx swagger-typescript-api --no-client --path ./TrueVote.Api.swagger.json --output ./src --name TrueVote.Api.ts",
    "update-packages": "ncu -u"
  },
  "dependencies": {
    "@apollo/client": "^3.7.12",
    "@emotion/react": "^11.10.6",
    "@mantine/core": "^6.0.9",
    "@mantine/hooks": "^6.0.9",
    "@mantine/notifications": "^6.0.9",
    "graphql": "^16.6.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^1.3.0",
    "react-router-dom": "^6.10.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.0.7",
    "@storybook/addon-interactions": "^7.0.7",
    "@storybook/addon-links": "^7.0.7",
    "@storybook/react": "^7.0.7",
    "@storybook/react-vite": "^7.0.7",
    "@storybook/testing-library": "^0.1.0",
    "@tabler/icons-react": "^2.17.0",
    "@types/node": "^18.16.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.1",
    "@types/react-helmet": "^6.1.6",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vitejs/plugin-basic-ssl": "^1.0.1",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.11",
    "npm-check-updates": "^16.10.9",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.2.2",
    "storybook": "^7.0.7",
    "swagger-typescript-api": "^12.0.4",
    "typescript": "^5.0.4",
    "vite": "^4.3.2",
    "vite-plugin-environment": "^1.1.3"
  }
}
