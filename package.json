{
  "name": "truevoteapp",
  "description": "TrueVote App",
  "author": "TrueVote, Inc.",
  "version": "1.0.0",
  "private": true,
  "homepage": "http://truevote.org/",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TrueVote/TrueVote.App"
  },
  "scripts": {
    "dev": "vite --host --port 5173",
    "build": "yarn lint && yarn build-version && tsc && vite build",
    "serve": "http-server dist",
    "preview": "vite preview",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --write \"**/*.{ts,tsx}\" --config ./.prettierrc",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build-api:local": "curl --insecure --output TrueVote.Api.swagger.json https://localhost:7253/swagger/v1/swagger.json && npx swagger-typescript-api --no-client --path ./TrueVote.Api.swagger.json --output ./src --name TrueVote.Api.ts",
    "build-api:prod": "npx swagger-typescript-api --no-client --path https://api.truevote.org/swagger/v1/swagger.json --output ./src --name TrueVote.Api.ts",
    "refresh-api:local": "yarn build-api:local && yarn fix-api",
    "refresh-api:prod": "yarn build-api:prod && yarn fix-api",
    "fix-api": "ts-node -P tsconfig.commonjs.json ./scripts/fixApi.ts",
    "ballot-simulator:local": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 API_BASE_URL=https://localhost:7253 ts-node -P tsconfig.commonjs.json ./scripts/BallotSimulator.ts",
    "ballot-simulator:prod": "ts-node -P tsconfig.commonjs.json ./scripts/BallotSimulator.ts",
    "build-version": "bash ./scripts/build-version.sh",
    "update-packages": "ncu -u"
  },
  "dependencies": {
    "@apollo/client": "^3.11.8",
    "@emotion/react": "^11.13.3",
    "@hello-pangea/dnd": "^17.0.0",
    "@mantine/core": "^7.13.4",
    "@mantine/hooks": "^7.13.4",
    "@mantine/modals": "^7.13.4",
    "@mantine/notifications": "^7.13.4",
    "axios": "^1.7.7",
    "graphql": "^16.9.0",
    "graphql-ws": "^5.16.0",
    "jspdf": "^2.5.2",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "nostr-tools": "^2.10.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-json-view": "^1.21.3",
    "react-router-dom": "^6.27.0",
    "react-sortable-hoc": "^2.0.0",
    "recharts": "^2.13.3"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.4.2",
    "@storybook/addon-interactions": "^8.4.2",
    "@storybook/addon-links": "^8.4.2",
    "@storybook/react": "^8.4.2",
    "@storybook/react-vite": "^8.4.2",
    "@storybook/testing-library": "^0.2.2",
    "@tabler/icons-react": "^3.21.0",
    "@types/eslint": "^9.6.1",
    "@types/jspdf": "^2.0.0",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-helmet": "^6.1.11",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "@vitejs/plugin-basic-ssl": "^1.1.0",
    "@vitejs/plugin-react": "^4.3.3",
    "cross-env": "^7.0.3",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-storybook": "^0.11.0",
    "http-server": "^14.1.1",
    "npm-check-updates": "^17.1.10",
    "postcss": "^8.4.47",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "storybook": "^8.4.2",
    "swagger-typescript-api": "^13.0.22",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-plugin-environment": "^1.1.3",
    "yargs": "^17.7.2"
  },
  "packageManager": "yarn@1.22.22"
}
